@model prjEscola.Models.TesteLogico
@{
    ViewBag.Title = "TesteLogico";
}

<h2>Teste Logico</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.QuantidadeIteracoes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QuantidadeIteracoes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.QuantidadeIteracoes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Digite o valor" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@{
    if (ViewBag.quantidade > 0)
    {
        <h1>Resultado</h1>
        int n = ViewBag.quantidade;
        String linha = "";
        for (int i = 0; i < n; i++)
        {
            for (int j = 0; j < n - i - 1; j++)
            {
                linha += " ";
            }
            for (int j = 0; j < i + 1; j++)
            {
                linha += "@";
            }
            <pre class=""> @linha </pre>
            linha = "";
        }
    }
}
